<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5ssp">

    <TextView
        android:id="@+id/mStudentId"
        android:layout_width="@dimen/_80ssp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_90ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:textAlignment="textStart"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mStudentName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20180512" />

    <TextView
        android:id="@+id/mStudentName"
        android:layout_width="@dimen/_100ssp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/mStudentId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mStudentId"
        app:layout_constraintTop_toTopOf="@id/mStudentId"
        tools:text="محمد عادل عبدالله احمد" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1ssp"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mStudentName"
        app:layout_constraintStart_toStartOf="@id/mStudentId"
        app:layout_constraintTop_toBottomOf="@id/mStudentId">

    </View>
</androidx.constraintlayout.widget.ConstraintLayout>